<form action="/add" method="POST" class="input-student">
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label for="idStudent">ID Student</label>
                            <input type="text" class="form-control" name="idStudent" id="idStudent" placeholder="ID Student">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label for="name">Name Student</label>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Name Student">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label for="dob">Date of birth</label>
                            <input type="text" class="form-control" name="dob" id="dob" placeholder="Date of Birth Student">
                        </div>
                    </div>  

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" name="address" id="address" placeholder="Address Student">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Email Student">
                        </div>
                    </div>  
                    <button type="submit" class="btn btn-primary btn-add">Add Student</button>
</form>